@model Zal.Models.AddSongViewModel

<h1>Add Song</h1>
<form method="post">
<div class="mt-3">
    <label class="form-label">Artist</label>
    <input type="text" class="form-control" asp-for="Artist"/>
</div>

<div class="mt-3">
    <label class="form-label">Song Name</label>
    <input type="text" class="form-control" asp-for="SongName"/>
</div>

<div class="mt-3">
    <label class="form-label">Album</label>
    <input type="text" class="form-control" asp-for="Album" />
</div>

<div class="mt-3">
    <label class="form-label">Year</label>
    <input type="number" class="form-control" asp-for="Year" />
</div>

<div class="mt-3">
    <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>