@{
}
@model Zal.Models.Entities.Song

<h1>Edit Song</h1>

@if (Model is null)
    {
    <p>No song has this ID</p>
    }

else
{
    <form method="post">
        <div class="mt-3">
            <label class="form-label">ID</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Artist</label>
            <input type="text" class="form-control" asp-for="Artist" />
        </div>

        <div class="mt-3">
            <label class="form-label">Song Name</label>
            <input type="text" class="form-control" asp-for="SongName" />
        </div>

        <div class="mt-3">
            <label class="form-label">Album</label>
            <input type="text" class="form-control" asp-for="Album" />
        </div>

        <div class="mt-3">
            <label class="form-label">Year</label>
            <input type="number" class="form-control" asp-for="Year" />
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" class="btn btn-danger ms-3" asp-action="Delete" asp-controller="Songs">Delete</button>
        </div>
    </form>
}